<div class="clearfix">
  <h1 class="pull-left">User</h1>
  <%= link_to 'Back to users', users_path, class: 'btn btn-default pull-right' %>
</div>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Access:</strong>
  <%= @user.access_type %>
</p>

<%= link_to 'Edit', edit_user_registration_path(@user), class: 'btn btn-primary' %>
<%= link_to 'Change password', edit_user_registration_path(@user), class: 'btn btn-primary' %>
<%= link_to 'Delete', user_registration_path(@user),
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: 'btn btn-danger' unless !admin? || @user.admin? %>
