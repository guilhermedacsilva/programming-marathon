<%= form_for(@marathon) do |f| %>

  <% if @marathon.errors.any? %>
    <div class="error">
      <ul>
      <% @marathon.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>

  <div class="form-group">
    <%= link_to 'Back', marathons_path %>
  </div>
<% end %>
