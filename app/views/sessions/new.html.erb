<div class="jumbotron login text-center">

<h1>Programming Marathon</h1>

<% flash.each do |name, message| %>
  <div class="row error">
    <%= message %>
  </div>
<% end %>

<div class="row">
  <%= form_for(:session,
                url: login_path,
                html: {class: 'col-sm-4 col-sm-push-4'}) do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, value: params[:session][:name], class: 'form-control', autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        Remember me on this computer
      <% end %>
    </div>

    <div class="form-group">
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    </div>

    <div class="form-group">New team? <%= link_to 'Sign up!', :signup %></div>

  <% end %>
  </div>
</div>
