<h1>Login page</h1>

<% flash.each do |name, message| %>
  <div style="color: red">
    <%= message %>
  </div>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, value: params[:session][:name] %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>
  </div>
  <%= f.submit "Log in" %>
<% end %>

<p>New user? <%= link_to 'Sign up!', :new_user %></p>

