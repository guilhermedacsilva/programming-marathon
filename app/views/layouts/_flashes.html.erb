<% flash.each do |name, message| %>
  <% if %w(notice success).include?(name) %>
    <div class="col-xs-12 alert alert-success">
  <% elsif %w(error alert).include?(name) %>
    <div class="col-xs-12 alert alert-danger">
  <% else %>
    <div class="col-xs-12 alert alter-warning">
  <% end %>

    <%= message %>
  </div>
<% end %>
