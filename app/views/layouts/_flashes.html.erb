<% flash.each do |name, message| %>
  <% if %w(notice success).include?(name) %>
    <div class="row alert alert-success">
  <% elsif name == 'errors' %>
    <div class="row alert alert-danger">
  <% else %>
    <div class="row alert alter-warning">
  <% end %>

    <%= message %>
  </div>
<% end %>
